        <servlet-name>detailPro</servlet-name>
        <servlet-class>Controllers.Admin.detailPro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>Controllers.Admin.addProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>forgetPass</servlet-name>
        <servlet-class>Controllers.AccountController.forgetPass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Test</servlet-name>
        <servlet-class>Controllers.AccountController.Test</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>orders</servlet-name>
        <servlet-class>Controllers.Home.orders</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>indexController</servlet-name>
        <url-pattern>/indexController</url-pattern>
