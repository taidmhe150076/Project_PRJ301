    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>Controllers.AccountController.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexAdmin</servlet-name>
        <servlet-class>Controllers.Admin.IndexAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>detailOrder</servlet-name>
        <servlet-class>Controllers.Admin.detailOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchByPrice</servlet-name>
        <servlet-class>Controllers.Home.searchByPrice</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Checkout</servlet-name>
        <servlet-class>Controllers.Home.Cart.Checkout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>acceptPaid</servlet-name>
        <servlet-class>Controllers.Admin.acceptPaid</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productIndex</servlet-name>
        <servlet-class>Controllers.Admin.productIndex</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateProduct</servlet-name>
        <servlet-class>Controllers.Admin.updateProduct</servlet-class>
    </servlet>
